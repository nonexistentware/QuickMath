<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.FirstMistakeActivity"
    android:background="@color/generalBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginStart="10px"
        android:layout_marginTop="10px"
        android:layout_marginEnd="10px"
        android:layout_marginBottom="10px"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/ukrainefont"
            android:gravity="center"
            android:text="Перша помилка"
            android:textColor="@color/generalText"
            android:textSize="25sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/ukrainefont"
            android:gravity="center"
            android:text="Режим гри не має рівня складності"
            android:textColor="@color/generalText"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/first_mistake_start_game_score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ukrainefont"
            android:gravity="center"
            android:text="100"
            android:textColor="@color/generalText"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/first_mistake_start_game_score_text_check"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ukrainefont"
            android:gravity="center"
            android:text="У вас є бали для початку гри."
            android:textColor="@color/generalText"
            android:textSize="20sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:id="@+id/first_mistake_start_game"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/ukrainefont"
                android:gravity="right"
                android:text="Почати"
                android:textColor="@color/generalText"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/first_mistake_question_mark"
                android:layout_width="wrap_content"
                android:layout_height="50px"
                android:layout_weight="1"
                android:src="@drawable/question_mark" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <TextView
                android:id="@+id/first_mistake_about_changeable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ukrainefont"
                android:text="About game mode"
                android:textColor="@color/generalText"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/first_mistake_hide_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/ukrainefont"
                android:gravity="center"
                android:text="Сховати"
                android:textColor="@color/generalText"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/first_mistake_back_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/ukrainefont"
                android:gravity="center"
                android:text="Повернутись на головну"
                android:textColor="@color/generalText"
                android:textSize="20sp" />


        </LinearLayout>


    </LinearLayout>


</RelativeLayout>