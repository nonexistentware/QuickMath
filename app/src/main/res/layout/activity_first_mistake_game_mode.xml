<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Difficult.FirstMistakeGameMode"
    android:background="@color/generalBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/first_mistake_game_mode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/ukrainefont"
                    android:text="Перша помилка"
                    android:gravity="center"
                    android:textColor="@color/generalText"
                    android:textSize="21sp" />

                <TextView
                    android:id="@+id/difficulty_level_first_mistake"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/ukrainefont"
                    android:text="Default"
                    android:gravity="center"
                    android:textColor="@color/generalText"
                    android:textSize="21sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="60dp"
                android:orientation="vertical"
                android:weightSum="3">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Бали"
                            android:textSize="30sp"
                            android:textColor="@color/generalText"
                            android:fontFamily="@font/ukrainefont"/>

                        <TextView
                            android:id="@+id/first_mistake_score_counter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="10dp"
                            android:text="000"
                            android:textColor="@color/generalText"
                            android:textSize="20sp"
                            android:fontFamily="@font/ukrainefont"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:fontFamily="@font/pixelstyle">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Питання"
                            android:textSize="30sp"
                            android:textColor="@color/generalText"
                            android:fontFamily="@font/ukrainefont"/>

                        <TextView
                            android:id="@+id/first_mistake_question_done_counter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="10dp"
                            android:text="000"
                            android:textColor="@color/generalText"
                            android:textSize="20sp"
                            android:fontFamily="@font/ukrainefont"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/first_mistake_must_score_banner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Бали для початку гри."
                        android:gravity="center"
                        android:textColor="@color/generalText"
                        android:fontFamily="@font/ukrainefont"
                        android:textSize="20sp"/>


                    <TextView
                        android:id="@+id/first_mistake_questions_to_pass_counter_down"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="000"
                        android:gravity="center"
                        android:textColor="@color/generalText"
                        android:textSize="30sp"
                        android:fontFamily="@font/ukrainefont"/>

                    <TextView
                        android:id="@+id/first_mistake_questions_wrong_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="30sp"
                        android:text="0"
                        android:textColor="@color/white"
                        android:fontFamily="@font/pixelstyle"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">


                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>



    <Button
        android:id="@+id/fm_button0"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="140dp"
        android:layout_height="105dp"
        android:layout_marginStart="28dp"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="46dp"
        android:layout_marginBottom="29dp"
        android:onClick="optionSelect"
        android:tag="0"
        android:text="Button"
        android:textColor="@color/generalText"
        android:textSize="28sp"
        app:layout_constraintBottom_toTopOf="@+id/fm_button2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/first_mistake_question_vew"
        android:fontFamily="@font/ukrainefont"/>

    <Button
        android:id="@+id/fm_button1"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="140dp"
        android:layout_height="105dp"
        android:layout_marginStart="240dp"
        android:layout_marginLeft="240dp"
        android:layout_marginTop="46dp"
        android:layout_marginEnd="31dp"
        android:layout_marginRight="31dp"
        android:layout_marginBottom="29dp"
        android:onClick="optionSelect"
        android:tag="1"
        android:text="Button"
        android:textColor="@color/generalText"
        android:textSize="28sp"
        app:layout_constraintBottom_toTopOf="@+id/fm_button3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/first_mistake_question_vew"
        android:fontFamily="@font/ukrainefont"/>

    <Button
        android:id="@+id/fm_button2"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="140dp"
        android:layout_height="105dp"
        android:layout_marginStart="28dp"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="72dp"
        android:layout_marginRight="72dp"
        android:layout_marginBottom="218dp"
        android:onClick="optionSelect"
        android:tag="2"
        android:text="Button"
        android:textColor="@color/generalText"
        android:textSize="28sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/fm_button3"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fm_button0"
        android:fontFamily="@font/ukrainefont"/>

    <Button
        android:id="@+id/fm_button3"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="140dp"
        android:layout_height="105dp"
        android:layout_marginStart="240dp"
        android:layout_marginLeft="240dp"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="31dp"
        android:layout_marginRight="31dp"
        android:layout_marginBottom="218dp"
        android:onClick="optionSelect"
        android:tag="3"
        android:text="Button"
        android:textColor="@color/generalText"
        android:textSize="28sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fm_button1"
        android:fontFamily="@font/ukrainefont"/>


    <TextView
        android:layout_marginTop="120dp"
        android:id="@+id/first_mistake_question_vew"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="29*12"
        android:textColor="@color/generalText"
        android:textSize="50sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.486"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.207"
        android:fontFamily="@font/ukrainefont"/>

</androidx.constraintlayout.widget.ConstraintLayout>