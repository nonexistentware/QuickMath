<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.SelectGameActivity"
    android:orientation="vertical"
    android:background="@color/generalBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="405dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/dashboard_user_profile_img"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="45dp"
                android:src="@drawable/pixel_google" />

            <TextView
                android:id="@+id/dashboard_player_google_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:text="User Name"
                android:textColor="@color/generalText"
                android:textSize="21sp"
                android:fontFamily="@font/pixelstyle"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="400dp"
            android:layout_height="120dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="275dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="3">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Score"
                        android:textSize="20sp"
                        android:textColor="@color/generalText"
                        android:fontFamily="@font/pixelstyle"/>

                    <TextView
                        android:id="@+id/dashboard_score_counter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="10dp"
                        android:text="125"
                        android:textColor="@color/generalText"
                        android:textSize="20sp"
                        android:fontFamily="@font/pixelstyle"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Duel win"
                        android:textSize="20sp"
                        android:textColor="@color/generalText"
                        android:fontFamily="@font/pixelstyle"/>

                    <TextView
                        android:id="@+id/dashboard_duel_win_counter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="10dp"
                        android:text="1205"
                        android:textColor="@color/generalText"
                        android:textSize="20sp"
                        android:fontFamily="@font/pixelstyle"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Level"
                        android:textColor="@color/generalText"
                        android:textSize="20sp"
                        android:fontFamily="@font/pixelstyle"/>

                    <TextView
                        android:id="@+id/dashboard_level_counter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="10dp"
                        android:text="360"
                        android:textColor="@color/generalText"
                        android:textSize="20sp"
                        android:fontFamily="@font/pixelstyle"/>

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_marginTop="45dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/dashboard_to_classic_game_mode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="Classic game mode"
                android:textColor="@color/generalText"
                android:fontFamily="@font/pixelstyle"/>

            <TextView
                android:id="@+id/dashboard_to_time_attack_mode"
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Time attack"
                android:textColor="@color/generalText"
                android:gravity="center"
                android:fontFamily="@font/pixelstyle"/>

            <TextView
                android:id="@+id/dashboard_leadership_table"
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Top players"
                android:textColor="@color/generalText"
                android:gravity="center"
                android:fontFamily="@font/pixelstyle"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="25dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add to group"
                android:textColor="@color/generalBackground"
                android:fontFamily="@font/pixelstyle"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="25dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Show all comments"
                android:textColor="@color/generalBackground"
                android:fontFamily="@font/pixelstyle"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/dashboard_about_app"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="About application"
        android:gravity="center"
        android:textColor="@color/generalText"
        android:fontFamily="@font/pixelstyle"/>

    <TextView
        android:layout_marginTop="40dp"
        android:id="@+id/dashboard_sign_ot_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign out"
        android:gravity="center"
        android:textColor="@color/generalText"
        android:fontFamily="@font/pixelstyle"/>

</LinearLayout>
