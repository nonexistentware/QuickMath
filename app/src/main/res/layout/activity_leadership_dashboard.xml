<!--            android:layout_height="wrap_content"-->
<!--            android:textColor="@color/generalText"-->
<!--            android:fontFamily="@font/pixelstyle"-->
<!--            android:text="Game mode"/>-->

        <TextView
            android:id="@+id/top_player_item_level_counter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/generalText"
            android:fontFamily="@font/pixelstyle"
            android:textSize="20sp"
            android:text="Level"/>

        <TextView
            android:id="@+id/top_player_item_score_counter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pixelstyle"
            android:textSize="20sp"
            android:text="Score"
            android:textColor="@color/generalText"/>

<!--        <TextView-->
<!--            android:id="@+id/top_player_item_last_game_dif_level"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
