<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.MainActivity"
    android:background="@color/generalBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"/>

    <LinearLayout
        android:id="@+id/lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true">

        <com.google.android.gms.common.SignInButton
            android:id="@+id/googleSignBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>

        <TextView
            android:layout_marginTop="10dp"
                android:id="@+id/main_activity_play_no_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/generalText"
                android:gravity="center"
                android:fontFamily="@font/pixelstyle"
                android:text="Play   offline"
                android:textSize="30sp"/>

        <TextView
            android:layout_marginTop="15dp"
            android:id="@+id/main_tooltip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="?"
            android:textColor="@color/generalText"
            android:gravity="center"
            android:textSize="30sp"
            android:fontFamily="@font/kongtext"/>

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="bottom"
        android:orientation="vertical">

    </LinearLayout>

</RelativeLayout>